{%- render 'testimonials',
  section: section.settings,
  blocks: section.blocks -%}

{% schema %}
  {
    "name": "Testimonials",
    "max_blocks": 4,
    "settings": [
      {
        "type": "text",
        "id": "tag",
        "label": "TagLine (Optional)"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "rgba(0,0,0,0)"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "text",
            "id": "rating",
            "label": "Rating",
            "info": "Enter the star rating number (1-5)"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Review text"
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "subtext",
            "label": "Subtext"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials",
        "blocks": []
      }
    ]
  }
{% endschema %}
