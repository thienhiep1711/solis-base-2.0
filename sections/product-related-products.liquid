{%- assign settings = section.settings -%}
{%- assign replated_products = product.metafields.related_products.products | split: '|' | default: section.blocks -%}

{%- render 'related-products',
  enable: settings.enable_related_products,
  tagline: settings.tagline,
  title: settings.title,
  blocks: replated_products -%}

{% schema %}
{
  "name": "Related Products",
  "class": "section-related-product",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_related_products",
      "label": "Enable Related Products",
      "default": false
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline (Optional)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "max_blocks": 8,
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
