{%- render 'instagram-feed',
  tagline: section.settings.tagline,
  title: section.settings.title,
  title_image: section.settings.title_image,
  showcase_gallery_id: product.metafields.instagram_feed.showcase_gallery_id,
  class: 'instagram-feed--product'
-%}

{% schema %}
{
  "name": "Instagram Feed (Product)",
  "class": "section-instagram-feed",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline (Optional)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "title_image",
      "label": "Title Image"
    }
  ]
}
{% endschema %}
