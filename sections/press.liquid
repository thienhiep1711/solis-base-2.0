{%- assign blocks = section.blocks -%}
{%- render 'press',
  subtitle: section.settings.subtitle,
  title: section.settings.title,
  blocks: blocks
-%}

{% schema %}
  {
    "name": "Press",
    "settings": [
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Upload a JPEG of ~ 126px."
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          },
          {
            "type": "url",
            "id": "url",
            "label": "URL"
          },
          {
            "type": "checkbox",
            "id": "open_in_new_window",
            "label": "Open in New Window"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Press",
        "blocks": []
      }
    ]
  }
{% endschema %}
