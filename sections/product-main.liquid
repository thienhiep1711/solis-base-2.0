{%- if section.settings.enable_section -%}
  {%- render 'product-main',
    section: section.settings,
    blocks: section.blocks -%}

  {%- if section.settings.enable_on_scroll_nav -%}
    {%- render 'pdp-on-scroll-nav' -%}
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Product Main",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_section",
      "label": "Enable this Section",
      "default": true
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "selector_style",
      "label": "Selector Type",
      "options": [
        {
          "value": "block",
          "label": "Block"
        },
        {
          "value": "dropdown",
          "label": "Dropdown"
        }
      ],
      "default": "dropdown"
    },
    {
      "type": "checkbox",
      "id": "show_color_swatch",
      "label": "Show color swatch",
      "default": false
    },
    {
      "type": "header",
      "content": "Gallery"
    },
    {
      "type": "select",
      "id": "gallery_style",
      "label": "Asset Fit",
      "options": [
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "cover",
          "label": "Cover"
        }
      ],
      "default": "cover"
    },
    {
      "type": "header",
      "content": "On-Scroll Nav"
    },
    {
      "type": "checkbox",
      "id": "enable_on_scroll_nav",
      "label": "Enable",
      "default": true
    },
    {
      "type": "header",
      "content": "Bundles"
    },
    {
      "type": "text",
      "id": "bundle_discount_message",
      "label": "Discount Message",
      "default": " - {discount_percent} bundle savings",
      "info": "Available variables: {discount_percent}, {discount_amount}"
    },
    {
      "type": "header",
      "content": "Up Sell"
    },
    {
      "type": "text",
      "id": "upsell_title",
      "label": "Title"
    },
    {
      "type": "product",
      "id": "upsell_product",
      "label": "Product"
    },
    {
      "type": "header",
      "content": "Size Guide"
    },
    {
      "type": "checkbox",
      "id": "enable_size_guide",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "size_guide_title",
      "label": "Title",
      "default": "Size Chart"
    },
    {
      "type": "text",
      "id": "size_guide_button_text",
      "label": "Button Text",
      "default": "Size Guide"
    }
  ],
  "blocks": [
    {
      "type": "Accordion",
      "name": "Product Details",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The title for this content"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Content"
        }
      ]
    },
    {
      "type": "size-guide",
      "name": "Size Guide",
      "settings": [
        {
          "type": "text",
          "id": "product_types",
          "label": "Product Types",
          "info": "Separate multiple product types by \",\""
        },
        {
          "type": "page",
          "id": "page",
          "label": "Select page"
        }
      ]
    }
  ]
}
{% endschema %}
