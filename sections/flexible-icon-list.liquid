{%- if section.blocks.size > 0 -%}
  {%- render 'flexible-icon-list' -%}
{%- endif -%}

{% schema %}
{
  "name": "Icon List (Flexible)",
  "blocks": [
    {
      "type": "item",
      "name": "Icon + Text",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon PNG"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon List (Flexible)",
      "category": "Flexible"
    }
  ]
}
{% endschema %}
