{%- render 'flexible-header' -%}

{%- if section.settings.disable_header_sticky -%}
  {% comment %}
    Overrides sticky header on this template only so I use "!important" here.
  {% endcomment %}
  <style>
    .site-header {
      position: static !important;
    }
    .header-is-sticky > main.main {
      margin-top: 0 !important;
    }
    .sticky-flexible-header {
      top: 0 !important;
    }
  </style>
{%- endif -%}

{% schema %}
{
  "name": "Sticky Header (Flexible)",
  "class": "sticky-flexible-header js-sticky-flexible-header",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Enable sticky",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "disable_header_sticky",
      "label": "Disable sticky header",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "FALL 2021 COLLECTION"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    }
  ],
  "presets": [
    {
      "name": "Sticky Header (Flexible)",
      "category": "Flexible"
    }
  ]
}
{% endschema %}
