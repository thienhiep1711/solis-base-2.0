{%- assign section_settings = section.settings -%}

{%- for block in section.blocks -%}
    {%- if block.settings.page == page.handle -%}
      {%- assign section_settings = block.settings -%}
      {% break %}
    {%- endif -%}
  {%- endfor -%}

{%- if section_settings.enable_section -%}
  {%- assign title = section_settings['title'] | default: page_title -%}
  {%- assign type = section_settings['background_type'] -%}

  {%- case type -%}
    {%- when 'image' -%}
      {%- assign image = section_settings['image'] | img_url: '2160x' -%}
      {%- assign image_intermediate = section_settings['image_intermediate'] | img_url: '1200x' -%}
      {%- assign image_mobile = section_settings['image_mobile'] | img_url: '700x' -%}

      {%- capture image_sources -%}
        {%- if image_mobile != blank -%}
          {{- image_mobile -}}
        {%- endif -%}
        {%- if image_intermediate != blank -%}
          |{{- image_intermediate -}}
        {%- endif -%}
        {%- if image != blank -%}
          |{{- image -}}
        {%- endif -%}
      {%- endcapture  -%}

      {%- capture breakpoints -%}
        {%- if image_mobile != blank -%}
          (max-width: 767px)
        {%- endif -%}
        {%- if image_intermediate != blank -%}
          |(max-width: 999px)
        {%- endif -%}
        {%- if image != blank -%}
          |(min-width: 1000px)
        {%- endif -%}
      {%- endcapture  -%}

      {%- render 'hero-small',
        type: type,
        hero_style: section_settings['hero_style'],
        content_alignment: section_settings['content_alignment'],
        text_alignment: section_settings['text_alignment'],
        is_dynamic: false,
        inverted_mode: section_settings['inverted_mode'],
        enable_overlay: section_settings['enable_overlay'],
        overlay_opacity: section_settings['overlay_opacity'],
        tagline: section_settings['tagline'],
        title: title,
        description: section_settings['text'],
        breakpoints: breakpoints,
        image_sources: image_sources -%}

    {%- when 'video' %}
      {%- assign fallback_desktop = section_settings['image'] | img_url: '2160x' -%}
      {%- assign fallback_intermediate = section_settings['image_intermediate'] | img_url: '1200x' -%}
      {%- assign fallback_mobile = section_settings['image_mobile'] | img_url: '700x' -%}

      {%- render 'hero-small',
        type: type,,
        hero_style: section_settings['hero_style'],
        content_alignment: section_settings['content_alignment'],
        text_alignment: section_settings['text_alignment'],
        is_dynamic: false,
        inverted_mode: section_settings['inverted_mode'],
        enable_overlay: section_settings['enable_overlay'],
        overlay_opacity: section_settings['overlay_opacity'],
        tagline: section_settings['tagline'],
        title: title,
        description: section_settings['text'],
        video: section_settings['video'],
        video_s: section_settings['video_s'],
        video_l: section_settings['video_l'],
        fallback: fallback_mobile,
        fallback_s: fallback_intermediate,
        fallback_l: fallback_desktop -%}

    {%- when 'none' -%}
      {%- render 'hero-small',
        type: type,,
        hero_style: section_settings['hero_style'],
        content_alignment: section_settings['content_alignment'],
        text_alignment: section_settings['text_alignment'],
        is_dynamic: false,
        inverted_mode: section_settings['inverted_mode'],
        enable_overlay: section_settings['enable_overlay'],
        overlay_opacity: section_settings['overlay_opacity'],
        tagline: section_settings['tagline'],
        title: title,
        description: section_settings['text'] -%}
  {%- endcase -%}
{%- endif -%}

