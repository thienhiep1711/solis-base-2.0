{%- if section.settings.enable_section -%}
  {%- render 'intro-text',
    title: section.settings.title,
    description: section.settings.description
  -%}
{%- endif -%}

{% schema %}
{
  "name": "Intro Text",
  "class": "intro-text-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_section",
      "label": "Enable this Section",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Intro Text",
      "blocks": []
    }
  ]
}
{% endschema %}
