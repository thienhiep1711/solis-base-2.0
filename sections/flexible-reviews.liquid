{%- if section.blocks.size > 0 -%}
  {%- render 'flexible-reviews' -%}
{%- endif -%}

{% schema %}
{
  "name": "Reviews (Flexible)",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "From the people"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon PNG"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Review item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Picture"
        },
        {
          "type": "range",
          "id": "star_count",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Star count",
          "default": 5
        },
        {
          "type": "textarea",
          "id": "text_content",
          "label": "Text content"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews (Flexible)"
    }
  ]
}
{% endschema %}
