{% render 'content-grid',
  section: section.settings,
  blocks: section.blocks,
  class: 'content-grid--page-404'
%}

{% schema %}
{
  "name": "Content Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "inverted_mode",
      "label": "Inverted mode"
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Enable overlay"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 50
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "limit": 6,
      "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "tagline",
          "label": "Tagline (Optional)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text (Optional)"
        },
        {
          "type": "url",
          "id": "cta_url",
          "label": "CTA URL (Optional)"
        },
        {
          "type": "header",
          "content": "Background"
        },
        {
          "type": "select",
          "id": "background_type",
          "label": "Background Type",
          "options": [
            {
              "value": "image",
              "label": "Image"
            },
            {
              "value": "video",
              "label": "Video"
            },
            {
              "value": "none",
              "label": "None"
            }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (Desktop)",
          "info": "Upload a JPEG of ~ 2160px."
        },
        {
          "type": "image_picker",
          "id": "image_intermediate",
          "label": "Image (Intermediate)",
          "info": "Upload a JPEG of ~ 1200px."
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image (Mobile)",
          "info": "Upload a JPEG of ~ 700px."
        },
        {
          "type": "url",
          "id": "video",
          "label": "Video URL",
          "info": "MP4 url. E.g. MP4 link from Vimeo Pro. Falls back to images on mobile and tablet."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Content Grid",
      "blocks": []
    }
  ]
}
{% endschema %}
