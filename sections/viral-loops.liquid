{%- if section.settings.snippet -%}
  {{- section.settings.snippet -}}
  {%- render 'viral-loops', section: section.settings -%}
{%- endif -%}

{% schema %}
  {
    "name": "Viral Loops Landing Page",
    "class": "viral-loops-landing-page",
    "settings": [
      {
        "type": "textarea",
        "id": "snippet",
        "label": "Code Snippet"
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Image Position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "right"
      },
      {
        "type": "header",
        "content": "Sign Up Page"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image (Mobile)",
        "info": "Upload a JPEG of ~ 700px."
      },
      {
        "type": "image_picker",
        "id": "image_s",
        "label": "Image (Intermediate)",
        "info": "Upload a JPEG of ~ 1200px."
      },
      {
        "type": "image_picker",
        "id": "image_l",
        "label": "Image (Desktop)",
        "info": "Upload a JPEG of ~ 2160px."
      },
      {
        "type": "range",
        "id": "image_width",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Image Width",
        "default": 50
      },
      {
        "type": "image_picker",
        "id": "badge",
        "label": "Badge Image"
      },
      {
        "type": "text",
        "id": "form_title",
        "label": "Form Title",
        "default": "Hey, WKND Nation is (Almost Here)"
      },
      {
        "type": "textarea",
        "id": "form_description",
        "label": "Form Description",
        "default": "If comfort & style had a lovechild, we would be it."
      },
      {
        "type": "text",
        "id": "form_subtitle",
        "label": "Form Subtitle"
      },
      {
        "type": "checkbox",
        "id": "enable_first_name",
        "label": "Enable First Name Field",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_last_name",
        "label": "Enable First Last Field",
        "default": true
      },
      {
        "type": "text",
        "id": "first_name_label",
        "label": "First Name Field Label",
        "default": "First Name"
      },
      {
        "type": "text",
        "id": "last_name_label",
        "label": "Last Name Field Label",
        "default": "Last Name"
      },
      {
        "type": "text",
        "id": "email_label",
        "label": "Email Field Label",
        "default": "Email Address"
      },
      {
        "type": "text",
        "id": "button_title",
        "label": "Button Title",
        "default": "Get On Our Short List"
      },
      {
        "type": "header",
        "content": "Social Page"
      },
      {
        "type": "image_picker",
        "id": "sharing_image",
        "label": "Image (Mobile)",
        "info": "Upload a JPEG of ~ 700px."
      },
      {
        "type": "image_picker",
        "id": "sharing_image_s",
        "label": "Image (Intermediate)",
        "info": "Upload a JPEG of ~ 1200px."
      },
      {
        "type": "image_picker",
        "id": "sharing_image_l",
        "label": "Image (Desktop)",
        "info": "Upload a JPEG of ~ 2160px."
      },
      {
        "type": "range",
        "id": "sharing_image_width",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Image Width",
        "default": 50
      },
      {
        "type": "image_picker",
        "id": "sharing_badge",
        "label": "Badge Image"
      },
      {
        "type": "text",
        "id": "sharing_title",
        "label": "Title",
        "default": "This Is Where Your Friends Come In"
      },
      {
        "type": "textarea",
        "id": "sharing_description",
        "label": "Description"
      },
      {
        "type": "header",
        "content": "Other Settings"
      },
      {
        "type": "text",
        "id": "milestone_title",
        "label": "Milestone Title",
        "default": "Let Your Friends Get Comfy Too"
      },
      {
        "type": "textarea",
        "id": "milestone_description",
        "label": "Milestone Description",
        "default": "Invite pals & earn clothes that make you feel good"
      },
      {
        "type": "textarea",
        "id": "terms_content",
        "label": "Terms Content",
        "default": "Certain restrictions apply. Rules subject to change. Valid in the U.S. only. Credits are valid on your first WKND Nation purchase and will be issued at launch. Private styling session is with Sofia Karvela (co-founder of WKND Nation) or a representative of her choosing and will be virtual. WKND Nation for a year means you will receive one piece from each drop through February 28, 2022. Number of pieces not to exceed 10."
      },
      {
        "type": "text",
        "id": "footer_content",
        "label": "Footer Content",
        "default": "Copyright Â© Wknd Nation 2021"
      }
    ],
    "presets": [
      {
        "name": "Viral Loops Landing Page"
      }
    ]
  }
{% endschema %}
