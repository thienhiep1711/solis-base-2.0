{%- comment -%}
  Parameters
  * urls
  * snippets
  * statements
  * load_apps
  * delay
  * delay_load
{%- endcomment -%}

{%- assign urls_split = urls | split: '|' -%}

<script>
  (function() {
    {%- if delay_load -%}
      function delayLoad() {
        setTimeout(function() {
          var urls = {{- urls_split | json -}}{%- if load_apps -%}.concat(window.BARREL.shopifyAppUrls || []){%- endif -%};
          for (var i = 0; i < urls.length; i++) {
            var s = document.createElement('script');
            s.type = 'text/javascript';
            s.async = true;
            s.src = urls[i];
            var x = document.getElementsByTagName('script')[0];
            x.parentNode.insertBefore(s, x);
          };
          {{- on_delay_load -}}
        }, {{- delay | default: 1000 -}});
      };
      window.addEventListener('scroll', delayLoad, {once: true});
      {{- snippets -}}
    {%- else -%}
      {{- snippets -}}
      {{- on_delay_load -}}
    {%- endif -%}
  }());
</script>
