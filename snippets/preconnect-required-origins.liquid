{%- comment -%}
  Consider adding preconnect or dns-prefetch resource hints to establish
  early connections to important third-party origins
{%- endcomment -%}

<link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
<link rel="preconnect" href="https://use.typekit.net" crossorigin>

{%- unless settings.is_dev_mode -%}
  <link rel="preload" href="{{- 'main.css' | asset_url -}}" as="style">

  {%- if template.name == 'index' -%}
    <link rel="preload" href="{{- 'index.js' | asset_url -}}" as="script">
  {%- endif -%}

  {%- if template.name == 'collection' -%}
    {%- comment -%}
      <link rel="preload" href="{{- 'vendors@collection@index@main@product.js' | asset_url -}}" as="script">
      <link rel="preload" href="{{- 'collection.js' | asset_url -}}" as="script">
    {%- endcomment -%}
  {%- endif -%}

  {%- if template.name == 'product' -%}
    {%- comment -%}
      <link rel="preload" href="{{- 'vendors@collection@index@main@product.js' | asset_url -}}" as="script">
      <link rel="preload" href="{{- 'vendors@index@main@product.js' | asset_url -}}" as="script">
      <link rel="preload" href="{{- 'product.js' | asset_url -}}" as="script">
    {%- endcomment -%}
  {%- endif -%}
{%- endunless -%}
