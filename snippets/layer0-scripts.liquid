{%- if settings.layer0_token != blank -%}
  <script defer>
    function initXdnRum() {
      new Layer0.Metrics({
        token: {{ settings.layer0_token | json }}
      }).collect()
    }
  </script>
  <script src="https://rum.layer0.co/latest.js" defer onload="initXdnRum()"></script>
{%- endif -%}
