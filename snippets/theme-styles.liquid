{%- comment -%}
  Renders the styles of the theme

  Params
  * is_dev_mode
{%- endcomment -%}
<link type="text/css" href="{{- 'settings.css' | asset_url -}}" rel="stylesheet">
<style>
  {%- render 'main-critical-css' -%}
</style>
{%- if template.name == 'index' -%}
    <link type="text/css" href="{{- 'index.css' | asset_url -}}" rel="stylesheet">
{%- elsif template.name == 'product' -%}
    <link type="text/css" href="{{- 'product.css' | asset_url -}}" rel="stylesheet">
{%- elsif template.name == 'collection' -%}
    <link type="text/css" href="{{- 'collection.css' | asset_url -}}" rel="stylesheet">
{%- else -%}
    <link type="text/css" href="{{- 'main.css' | asset_url -}}" rel="stylesheet">
{%- endif -%}
