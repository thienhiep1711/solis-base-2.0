{%- assign error_msg = 'customer.reset_password.error' | t -%}
{%- assign placeholder = 'customer.reset_password.password_placeholder' | t -%}

<div is="account-reset-form" inline-template>
  <div @submit="validate" class="container container--xs account-reset-form--container">

    {%- assign title = 'customer.reset_password.title' | t -%}
    <div class="account-forms__header">
      {%- render 'page-title', title: title -%}
      <p class="p align-c"></p>{{- 'customer.reset_password.subtext' | t -}}</p>
    </div>

    <div>
      {%- form 'reset_customer_password' -%}

        {%- render 'form-errors', errors: form.errors -%}

        <div class="form-row">
          {%- assign label = 'customer.reset_password.password' | t -%}
          {%- render 'text-input' with
            name: 'customer[password]',
            type: 'password',
            error: error_msg,
            placeholder: placeholder,
            show_placeholder: true,
            class: 'text-input--account',
            label: label,
            required: true -%}
        </div>

        <div class="form-row">
          {%- assign label = 'customer.reset_password.confirm_password' | t -%}
          {%- render 'text-input' with
            name: 'customer[password_confirmation]',
            type: 'password',
            error: error_msg,
            placeholder: placeholder,
            show_placeholder: true,
            class: 'text-input--account',
            label: label,
            required: true -%}
        </div>

        <div class="form-row">
          {%- assign value = 'customer.reset_password.submit' | t -%}
          {%- render 'button',
            value: value,
            type: 'submit',
            class: 'btn--primary btn--full-width' -%}
        </div>
      {%- endform -%}
    </div>
  </div>
</div>
