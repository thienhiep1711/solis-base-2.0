{%- comment -%}
  Renders the scripts of the theme

  Params
  * is_dev_mode
{%- endcomment -%}

{%- if is_dev_mode -%}
  {%- if template.name == 'index' -%}
    <script src="/dev/index.js" defer></script>
  {%- elsif template.name == 'product' -%}
    <script src="/dev/product.js" defer></script>
  {%- elsif template.name == 'collection' -%}
    <script src="/dev/collection.js" defer></script>
  {%- else -%}
    <script src="/dev/main.js" defer></script>
  {%- endif -%}
{%- else -%}
  {%- if template.name == 'index' -%}
    <script src="{{- 'vendors@collection@index@main@product.js' | asset_url -}}" defer></script>
    <script src="{{- 'vendors@index@main@product.js' | asset_url -}}" defer></script>
    <script src="{{- 'index.js' | asset_url -}}" defer></script>
  {%- elsif template.name == 'product' -%}
    <script src="{{- 'vendors@collection@index@main@product.js' | asset_url -}}" defer></script>
    <script src="{{- 'vendors@index@main@product.js' | asset_url -}}" defer></script>
    <script src="{{- 'product.js' | asset_url -}}" defer></script>
  {%- elsif template.name == 'collection' -%}
    <script src="{{- 'vendors@collection@index@main@product.js' | asset_url -}}" defer></script>
    <script src="{{- 'collection.js' | asset_url -}}" defer></script>
  {%- else -%}
    <script src="{{- 'vendors@collection@index@main@product.js' | asset_url -}}" defer></script>
    <script src="{{- 'vendors@index@main@product.js' | asset_url -}}" defer></script>
    <script src="{{- 'main.js' | asset_url -}}" defer></script>
  {%- endif -%}
{%- endif -%}
