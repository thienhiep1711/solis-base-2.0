{%- if current_tags -%}
  {%- assign current_tag = current_tags.first | remove_first: 'category-' | capitalize -%}
  {%- render 'breadcrumbs', current_tag: current_tag -%}
  {%- render 'blog-hero-basic', title: current_tag -%}
{%- else -%}
  {%- section 'blog-hero' -%}
  {% comment %} {%- section 'category-navigation' -%} {% endcomment %}
  {%- section 'blog-page-title' -%}
{%- endif -%}

{%- paginate blog.articles by 15 -%}
  {%- render 'three-up',
    class: 'three-up--blog',
    post_cards: blog.articles,
    is_post: true,
    paginate: paginate
  -%}
{%- endpaginate -%}
